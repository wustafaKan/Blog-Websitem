<body>

    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="/index">Mustafa Kandemir</a>
            </div>
            <div class="menu-toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
            <ul class="nav-list">
                <% if (cookies.admin_token && !cookies.token) { %>
                    <li><a href="/adminPage">Admin Paneli</a></li>
                <% } %>
                <li><a href="/projelerim">Projeler</a></li>
                <li><a href="/blogs">Blog</a></li>
                <li><a href="/iletisim">İletişim</a></li>
                <% if (cookies.token || cookies.admin_token) { %> 
                    <li><a href="/logout">Çıkış</a></li>
                <% } else { %>
                    <li><a href="/login">Giriş / Kayıt Ol</a></li>
                <% } %>
            </ul>
        </nav>    
    </header>

    <section class="section_1">
        <h2>Blog Yazıları</h2>

    
    </section>

    <section class="section_2">
        <% blogs.forEach(blog => { %>
            <div class="card-projects">
                <a href="/blogs/<%= blog.title %>">
                    <% if (blog.image) { %>
                        <img src="<%= blog.image %>" alt="Blog Görseli">
                    <% } else { %>
                        <img src="/blogs/<%= blog.title %>/images/default-image.png" alt="Varsayılan Blog Görseli">
                    <% } %>
                </a>
                <div class="text-and-tags-container">
                    <div class="projectsTexts-projects">
                        <h2><%= blog.title %></h2>
                        <p><%= blog.content.substring(0, 100) %>...</p> <!-- Blog içeriğinin ilk 100 karakteri -->
                    </div>
                    <div class="tags-container-projects">
                        <% blog.tags.forEach(tag => { %>
                            <a href="#"><span><%= tag %></span></a>
                        <% }) %>
                    </div>
                </div>
                <a href="/blogs/<%= blog.title %>" id="projectLink">Blog Yazısına Git -></a>
            </div>
        <% }) %>
    </section>

    <footer>
        <a href="index.html" id="footerLogo">Mustafa Kandemir</a>
        <div class="socialMediaLinks">
            <a href="#insta"><img src="images/instalogo.png" alt=""></a>
            <a href="#linkedin"><img src="images/linkedinlogo.png" alt=""></a>
            <a href="#x"><img src="images/twitterlogo.png" alt=""></a>
            <a href="#facebook"><img src="images/facelogo.png" alt=""></a>
        </div>
        
        <hr>

        <div class="copyrighting">
