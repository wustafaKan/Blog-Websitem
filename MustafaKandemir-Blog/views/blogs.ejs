        }

        /* Responsive adjustments for smaller screens */
        @media (max-width: 849px) {

            .section_2 {
                padding: 20px 10px;
            }

            .card-projects {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .card-projects img {
                max-width: 100%;
                height: 250px;
                margin-bottom: 15px;
            }

            .text-and-tags-container {
                margin-left: 0;
                align-items: center;
            }

            .projectsTexts-projects {
                text-align: center;
            }

            .card-projects .tags-container-projects {
                justify-content: center;
            }

            #projectLink {
                align-self: center;
            }
        }
